<div class="block">
  <figure>
    <%= image_tag book.picture , class: "image-book" %>
    <h3 class="title-content">
      <%= link_to book.title, book_path(book), class: "title-book" %>
    </h3>
    <ul class="list-group">
      <li>
        <%= t "view.book.author" %>
        <i class="book-author"><%= book.author %></i>
      </li>
    </ul>
    <ul class="list-group">
      <%= t "view.book.sum_rating" %>
      <% if book.avg_rate? %>
        <%= display_rate book.avg_rate %>
      <% else %>
        <%= image_tag "no_star.png", class: "no-star" %>
      <% end %>
   </ul>
    <div class="publish-date">
      <ul class="ul-publish-date"><%= t "view.book.publish_date" %>
      <%= l book.publish_date, format: Settings.date %></ul></div>
  </figure>
</div>
